<Application x:Class="Programing_Labs.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Programing_Labs"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/TextBoxTheme.xaml"/>
                <ResourceDictionary Source="Theme/MenuButtonThemeClicked.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <LinearGradientBrush x:Key="MenuItemClickedGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0" Color="#006700"/>
                <GradientStop Offset="1" Color="#00ef00"/>
            </LinearGradientBrush>
            
        </ResourceDictionary>
       
    </Application.Resources>
</Application>
